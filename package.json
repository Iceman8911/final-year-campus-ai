{
	"name": "final-year-campus-ai",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"format": "turbo run format",
		"start": "turbo run start",
		"test": "turbo run test",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"husky": "^9.1.7",
		"turbo": "^2.7.4",
		"typescript": "5.9.2",
		"lint-staged": "^16.2.7"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "bun@1.3.6",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"lint-staged": {
		"*.{ts,tsx,css,json}": "biome check --write",
		"*.py": [
			"uv run ruff check --fix",
			"uv run ruff format --check"
		]
	}
}
